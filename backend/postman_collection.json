{
  "info": {
    "_postman_id": "health-app-api",
    "name": "Health App API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Facilities",
      "item": [
        {
          "name": "List Facilities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/facilities",
              "host": ["{{base_url}}"],
              "path": ["facilities"],
              "query": [
                { "key": "type", "value": "hospital", "disabled": true },
                { "key": "limit", "value": "10", "disabled": true }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Facility",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/facilities/:id",
              "host": ["{{base_url}}"],
              "path": ["facilities", ":id"],
              "variable": [{ "key": "id", "value": "1" }]
            }
          },
          "response": []
        },
        {
          "name": "Nearby Facilities",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/facilities/nearby?lat=13.6218&lng=123.1948",
              "host": ["{{base_url}}"],
              "path": ["facilities", "nearby"],
              "query": [
                { "key": "lat", "value": "13.6218" },
                { "key": "lng", "value": "123.1948" },
                { "key": "radius", "value": "5" }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Symptoms",
      "item": [
        {
          "name": "List Symptoms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/symptoms",
              "host": ["{{base_url}}"],
              "path": ["symptoms"]
            }
          },
          "response": []
        },
        {
          "name": "Search Symptoms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/symptoms/search?q=fever",
              "host": ["{{base_url}}"],
              "path": ["symptoms", "search"],
              "query": [{ "key": "q", "value": "fever" }]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "AI",
      "item": [
        {
          "name": "Navigate (Triage)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"symptoms\": \"severe headache and dizziness\",\n    \"age\": \"30\",\n    \"severity\": \"moderate\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ai/navigate",
              "host": ["{{base_url}}"],
              "path": ["ai", "navigate"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "YAKAP",
      "item": [
        {
          "name": "Get Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/yakap/info",
              "host": ["{{base_url}}"],
              "path": ["yakap", "info"]
            }
          },
          "response": []
        },
        {
          "name": "Enroll User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"user_id\": \"test-user-id\",\n    \"phone_number\": \"09123456789\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/yakap/enrollment",
              "host": ["{{base_url}}"],
              "path": ["yakap", "enrollment"]
            }
          },
          "response": []
        },
        {
          "name": "Get Enrollment Status",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/yakap/enrollment/:userId",
              "host": ["{{base_url}}"],
              "path": ["yakap", "enrollment", ":userId"],
              "variable": [{ "key": "userId", "value": "test-user-id" }]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Emergency Contacts",
      "item": [
        {
          "name": "List All",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/emergency-contacts",
              "host": ["{{base_url}}"],
              "path": ["emergency-contacts"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": "valid-token"
    }
  ]
}
